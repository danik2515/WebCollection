<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebCollection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/siteBlack.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/siteWhite.css" asp-append-version="true" />
   
    <script>
         function applyTheme(value){
             var checkbox=document.getElementById('checkbox_theme');
             if(value==="false"){
                  document.body.className="white";
                  checkbox.checked=false;
              }
              if(value==="true"){
                  document.body.className="black";
                  checkbox.checked=true;
              }
         }
       function clickTheme(){
   var checkboxState=document.getElementById('checkbox_theme').checked;
   if(checkboxState==true)
   {
     localStorage.setItem("themeValue", checkboxState);
   }else{
        localStorage.setItem("themeValue", checkboxState);
   }
   applyTheme(String(checkboxState));
       }
        </script>
   
    
    <link rel="stylesheet" href="~/WebCollection.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    
    
    
</head>

<body class="white">
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" >
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        
                        <label class="switch">
                            <input type="checkbox" id="checkbox_theme" name="checkbox_theme"  onclick="clickTheme()">
                             
                            <span class="slider round"></span>
                        </label>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <script>
        var themeValue = localStorage.getItem("themeValue");
        if (themeValue === null || themeValue === "null") {
           localStorage.setItem("themeValue", false);
        }
        applyTheme(themeValue);  
        </script>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebCollection
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
